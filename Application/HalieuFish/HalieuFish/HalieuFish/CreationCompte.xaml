<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalieuFish.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="8">
                <Label Text="Inscription" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">

                <Button Text="Vous êtes une entreprise" 
                        Clicked="inscriptionEntreprise"
                        CornerRadius="15"
                        Margin="20"/>
                
                <Button Text="Vous êtes un pêcheur" 
                        Clicked="inscriptionPecheur"
                        CornerRadius="15"
                        Margin="20"/>

            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>