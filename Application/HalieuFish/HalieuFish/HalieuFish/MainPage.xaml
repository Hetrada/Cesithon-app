<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:reactiveui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
             xmlns:vm="clr-namespace:HalieuFish"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalieuFish.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="8">
            <Label Text="Connexion" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="mail" Placeholder="Adresse mail" TextChanged="OnEntryTextChanged"/>
        <Entry IsPassword="true" Placeholder="mot de passe" />

            <Button 
                Text="Connexion" 
                CornerRadius="15"
                Margin="15"/>


        <Grid >
            <Button 
                    Grid.Column ="0" 
                    Text="Créer un compte" 
                    CornerRadius="15"
                    Clicked="GoCreation"/>

            <Button 
                    Grid.Column ="1" 
                    Text="Mot de passe oublié" 
                    CornerRadius="15"
                Clicked="GoMdpOubliee"/>
        </Grid>
    </StackLayout>

</ContentPage>
