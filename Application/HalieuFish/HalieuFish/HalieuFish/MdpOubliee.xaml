<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalieuFish.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="8">
                <Label Text="Récupérer son mot de passe" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>


            <Entry x:Name="recup" Placeholder="Adresse mail" />
            
            <Button Text="Envoyer un email de récupération" 
                    CornerRadius="15"
                    HorizontalOptions="Center"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>