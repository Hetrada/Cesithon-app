<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HalieuFish.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="8">
                <StackLayout>

                    <Grid>
                        <Button Text="&lt;" Clicked="retour" BackgroundColor="#2196F3" VerticalOptions="Start"  HorizontalOptions="Start" FontSize="Title"/>
                    
                        <Label  Text="Mot de passe oublié" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Center" TextColor="White" FontSize="26"/>
                    </Grid>
                        
                </StackLayout>
        </Frame>


            <Entry x:Name="recup" Placeholder="Adresse mail" Completed="OnEntryCompleted" Keyboard="Email"/>
            
            <Button Text="Envoyer un email de récupération" 
                    CornerRadius="15"
                    HorizontalOptions="Center"
                    Clicked="MailMDP"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>